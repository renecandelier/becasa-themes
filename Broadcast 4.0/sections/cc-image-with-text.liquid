<!-- /sections/section-double.liquid -->

{%- render 'cc-double' -%}
<style>
  {% if request.page_type =='product' %}
    {% if section.settings.toshowincollection != blank %}
      {% liquid
        assign collectionlist = section.settings.toshowincollection
        assign isincollection = false

        for col in collectionlist
          for productcol in product.collections
            if col.title == productcol.title
              assign isincollection = true
            endif
          endfor
        endfor
      %}
      {% if isincollection %}
    {% else %}
    #shopify-section-{{ section.id }}{
      display: none;
    }
    {% endif %}
  {% endif %}
{% endif %}
  #BrickSection--{{ section.id }}{
    --bg: transparent !important;
    position: relative;
    z-index: 2;
  }

  #shopify-section-{{ section.id }}{
    position: relative;

    background-color: {{ section.settings.outer_bg | default: 'transparent' }};
    {% if section.settings.bg_image != blank %}
      background-image: url({{ section.settings.bg_image |  img_url: 'master' }});
      background-size: 100% 90%;
      background-position: bottom center;
      background-repeat: no-repeat;
      {% endif %}
  }



  #shopify-section-{{ section.id }} .brick__section{
    gap: 16px;
  }

  #shopify-section-{{ section.id }} .brick__block__text{
    {% if section.settings.content_bg != blank %}
      background-image: url({{section.settings.content_bg | img_url: 'master' }});
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
  {% endif %}
  flex-basis: 100%;
  justify-content: center;
  }


  #shopify-section-{{ section.id }} .hero__title {
    color: {{ section.settings.hcolor }};
    letter-spacing: 0;
    font-family: var(--FONT-STACK-HEADING-REGULAR);
    font-style: normal;
  }

  #shopify-section-{{ section.id }}  .brick__block--text .hero__content--compact {
    flex-basis: 504px;
    padding-left: 16px;
    padding-right: 16px;
}

  #shopify-section-{{ section.id }} .cc__column_text{
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: space-between;
    max-width: 100%;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
  }

  #shopify-section-{{ section.id }} .cc__column_text .hero__button{
    justify-content: flex-start;
    margin-top: 20px;
  }


  #shopify-section-{{ section.id }} .cc__column_text .hero__rte{
    width: 100%;
  }

  #shopify-section-{{ section.id }} .divider{
    --border: {{ section.settings.divider_color }};
  }

  #shopify-section-{{ section.id }} .hero__rte_title{
    font-size: 12px;
    letter-spacing: 1.5px;
    color: #B2901F;
    margin-top: 0;
    margin-bottom: 10px;
    font-family: var(--FONT-STACK-BODY);
    font-weight: 500;
    text-transform: UPPERCASE;
  }

  #shopify-section-{{ section.id }} .hero__subheading {
    color: {{ section.settings.shcolor }};
    text-transform: Inherit !important;
  }

  #shopify-section-{{ section.id }} .hero__collections{
    --gap: 16px;
    position: relative;
  }


  #shopify-section-{{ section.id }} .collection-item{
    position: relative;
    z-index: 2;
  }



  #shopify-section-{{ section.id }} .hero__collections .btn{
    font-weight: normal !important;
    font-size: 12px;
  }

  #shopify-section-{{ section.id }} .btn.btn--text span{
    line-height: 1.1;
  }

  #shopify-section-{{ section.id }} .collection-item__actions{
    padding: 8px;
  }

  #shopify-section-{{ section.id }} .hero__rte a:not(.btn.btn--solid){
    --link: currentcolor;
    --link-hover: currentcolor;
    display: inline;
    text-decoration: none;
    cursor: pointer;
    padding: 0 0 5px;
    color: var(--link);
    line-height: normal;
    background: linear-gradient(to right, currentColor, currentColor);
    background-size: 100% 1px;
    background-position: 50% 86%;
    background-repeat: no-repeat;
    transition: color 0.25s ease-in, background-size 0.25s ease-in;
  }

  #shopify-section-{{ section.id }} .hero__rte a.btn.btn--text.btn--primary{
    background-size: 0% 1px;
    --link: var(--BTN-PRIMARY-BORDER-COLOR);
    --link-hover: var(--BTN-PRIMARY-BORDER-COLOR);
  }

  #shopify-section-{{ section.id }} .hero__rte a.btn.btn--text.btn--secondary{
    background-size: 0% 1px;
    --link: var(--BTN-SECONDARY-BORDER-COLOR);
    --link-hover: var(--BTN-SECONDARY-BORDER-COLOR);
  }


  #shopify-section-{{ section.id }} .hero__media {
    width: var(--mwidth);
  }

  #shopify-section-{{ section.id }} .hero__subheading.subheading-size-1{
    font-size: 12px;
    font-family: var(--FONT-STACK-BODY);
    font-weight: 400;
    letter-spacing: 2px;
  }

  #shopify-section-{{ section.id }} .cc__featuredtestimonial-author{
    font-family: var(--FONT-STACK-DESMONTILLES);
    margin: 0;
    font-size: 30px;
    text-align: right;
  }

  #shopify-section-{{ section.id }} .cc__locationinfo-details-row {
    display: flex;
    flex-direction: column;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .cc__locationinfo-details-row:not(:last-child){
    margin-bottom: 20px;
  }

  #shopify-section-{{ section.id }} .cc__locationinfo-details-inner.wrapper--full-padded{
    max-width: 1100px;
  }

  #shopify-section-{{ section.id }} .cc__locationinfo-title{
    font-family: var(--FONT-STACK-DESMONTILLES);
    font-size: 26px;
  }


  @media screen and (min-width: 750px){

    #shopify-section-{{ section.id }} .cc__column_text .hero__rte{
      width: calc(50% - 8px);
    }


     #shopify-section-{{ section.id }} .hero__collections .btn{
      font-size: 16px;
     }

     #shopify-section-{{ section.id }} .collection-item__actions{
      padding: 12px;
    }
    #shopify-section-{{ section.id }} .hero__media {
      width: var(--dwidth);
    }

    #shopify-section-{{ section.id }} .brick__block__text{
      justify-content: center;
    }

    #shopify-section-{{ section.id }} .cc__locationinfo-details-row {
      align-items: center;
      justify-content: space-between;
      flex-direction: row;
      text-align: left;
    }

    #shopify-section-{{ section.id }} .cc__locationinfo-details-row:not(:last-child){
      margin-bottom: 40px;
    }

    #shopify-section-{{ section.id }} .cc__locationinfo-address,
    #shopify-section-{{ section.id }} .cc__locationinfo-hours {
        max-width: 255px;
    }

    #shopify-section-{{ section.id }} .cc__locationinfo-title{
      font-size: 35px;
    }
  }

  @media screen and (max-width: 749.99px){
    #shopify-section-{{ section.id }} .hero__content{
      text-align: center;
    }

    #shopify-section-{{ section.id }}  .cc__column_text .hero__button,
    #shopify-section-{{ section.id }} .hero__button{
      justify-content: center;
    }

    #shopify-section-{{ section.id }}  .cc__column_text .hero__button{
      margin-bottom: 0;
    }
  }

