       {
         "value": "2",
         "label": "2 collections per row"
       },
       {
         "value": "slider",
         "label": "Slider"
       }
     ],
     "default": "slider"
   },
   {
     "type": "image_picker",
     "id": "bgimage",
     "label": "Background image"
   },
   {
     "type": "header",
     "content": "Colors"
   },
   {
     "type": "color_background",
     "id": "header_background",
     "label": "Header background"
   },
   {
     "type": "color",
     "id": "bg_color",
     "label": "Background"
   },
   {
     "type": "color",
     "id": "hcolor",
     "label": "Heading Color",
     "default": "#000"
   },
   {
    "type": "color",
    "id": "colcontentcolor",
    "label": "Grid Title info background",
    "default": "transparent"
   },
   {
     "type": "color",
     "id": "coltitlecolor",
     "label": "Collection Title",
     "default": "#000"
   },
   {
     "type": "color",
     "id": "linklabel",
     "label": "Collection link label",
     "default": "#000"
   },
   {
     "type": "header",
     "content": "Quick Add"
   },
   {
     "type": "color",
     "id": "cardvar_color",
     "label": "Variant Selector Border",
     "default": "#000"
   },
   {
     "type": "color",
